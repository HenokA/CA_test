<div class = "pure-g-1-2">

<div class = "splash-container">
	<div class = " splash">
		<h1 class="splash-head"> San Francisco Standardized <br> Test Score 
									Visualization </h1>
		<p class = "splash-subhead"> A website that graphs SF's standardized 
										test scores from 2010-2013.<br> Come on down!</p>
		<a href="/#search" class="pure-button pure-button-primary"> Search </a>

	</div>
</div>
</div>
<div id="selectcont" class = "pure-g-1-2">
<div class = " choices">
<h1 id="search" class = "center splash-head"> Select Information Here </h1>
<h2 class = "center"> Please pay close attention to matching the grades between 
						drop-down menus!<br> Elementary Schools have been known to 
						return more frequently from our database! </h2>
	<form action= "/home" method = "post" class="pure-form pure-form-stacked">
	    <fieldset>
	         <label for="city">School</label>
	        <select style="width: 70%" id="school" name="school">
	        <option></option>
	        	<% counter = 0 %>
	        	<% while counter < 118 %>
	        		<% if counter != 0 %>
	        			<!-- these if statements just group the schools into their grade category -->
	        			<% if names[counter-1][2] == names[counter][2] && names[counter-1][3] == names[counter][3] %>
	        				<option> <%=names[counter][1]%> </option>
	        			<%elsif names[counter][2].to_s=='K' && names[counter][3].to_i==5%>
		        			<optgroup label= "Grades K-5">
		        			<option> <%=names[counter][1]%> </option>
		        		<% elsif names[counter][2].to_s == "K" && names[counter][3].to_i == 8 %>
		        			<optgroup label= "Grades K-8">
		        			<option> <%=names[counter][1]%> </option>
		        		<% elsif names[counter][2].to_s == "4" && names[counter][3].to_i == 8 %>
		        			<optgroup label= "Grades 4-8">
		        			<option> <%=names[counter][1]%> </option>
		        		<% elsif names[counter][2].to_s == "5" && names[counter][3].to_i == 8 %>
		        			<optgroup label= "Grades 5-8">
		        			<option> <%=names[counter][1]%> </option>
		        		<% elsif names[counter][2].to_s == "6" && names[counter][3].to_i == 12 %>
		        			<optgroup label= "Grades 6-12">
		        			<option> <%=names[counter][1]%> </option>
		        		<% elsif names[counter][2].to_s == "6" && names[counter][3].to_i == 8 %>
		        			<optgroup label= "Grades 6-8">
		        			<option> <%=names[counter][1]%> </option>
		        		<% elsif names[counter][2].to_s == "8" && names[counter][3].to_i == 12 %>
		        			<optgroup label= "Grades 8-12">
		        			<option> <%=names[counter][1]%> </option>
		        		<% elsif names[counter][2].to_s == "9" && names[counter][3].to_i == 12 %>
		        			<optgroup label= "Grades 9-12">
		        			<option> <%=names[counter][1]%> </option>
		        		<%end%>
		        	<%else%>
		        		<optgroup label= "Grades K-5">
		        		<option> <%=names[counter][1]%> </option>
		        	<%end%>
	        		<% counter +=1 %>
	        	<% end %>
	        </select>
	        </label>

	         <label for="test">Test</label>
	        <select id="test" style="width: 50%" name="test">
	        	<!-- all tests we can support in their grade categories -->
	        	<option></option>
	        	<optgroup label="For Grades 2-8">
	            <option>English-Language Arts</option>
	            <option>Mathematics</option>
	        	<optgroup label="For Grade 9,10 and 11">
	            <option>Physics</option>
	            <option>World History</option>
	            <option>Earth Science</option>
	            <option>Biology</option>
	            <option>Algebra 2</option>
	            <option>Geometry</option>
	        	<optgroup label="For Grade 9">
	            <option>General Mathematics</option>
	            <option>Algebra 1</option>
	            <option>Geometry</option>
	        	<optgroup label="For Grade 10">	    
	            <option>Algebra 1</option>
	            <option>Science</option>
	            <option>Chemistry</option>
	            <option>English-Language Arts</option>
	            <option>Summative High School Mathematics</option>
	            <option>Integrated Math 1</option>
	        	<optgroup label="For Grade 11">	    
	            <option>Summative High School Mathematics</option>
	            <option>Integrated Math 2</option>
	            <option>English-Language Arts</option>
	            <option>Chemistry</option>
	        </select>

	         <label for="grade">Grade</label>
	        <select id="grade" name="grade">
	        	<!-- grades we support -->
	        	<option></option>
	            <option>2</option>
	            <option>3</option>
	            <option>4</option>	       
	            <option>5</option>
	            <option>6</option>
	            <option>7</option>
	            <option>8</option>
	            <option>9</option>
	            <option>10</option>
	            <option>11</option>

	        </select>
	        <button name = "button1" type="submit" id="searchbutton" class="pure-button pure-button-primary"> Search </button>
	    </fieldset>
	</form>
</div>
</div>